<script>
function send_rest_command(command) 
{
const Http = new XMLHttpRequest();
const server_ip = location.host.split(":", 1)[0];
const rest_api_port = '5000';
const url='http://' + server_ip + ':' + rest_api_port + command;
Http.open("GET", url);
Http.send();
}

function swap_led_strip()
{
 var elem = document.getElementById("led_button_1");
 
 if (elem.innnerHTML == "ON")
 {
   elem.innnerHTML = "OFF";
   elem.innerText = "OFF";
   elem.style.borderColor="red";
   const rest_command = '/set_relay_state/0/1/';
   send_rest_command(rest_command);
 }
 else
 {
   elem.innnerHTML = "ON";
   elem.innerText = "ON";
   elem.style.borderColor="green";
   const rest_command = '/set_relay_state/0/0/';
   send_rest_command(rest_command);
 }
}

